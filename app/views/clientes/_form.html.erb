<%= form_for(@cliente) do |f| %>
    <% if @cliente.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@cliente.errors.count, "error") %> prohibited this cliente from being saved:</h2>

          <ul>
            <% @cliente.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <label>
        <%= f.check_box :pessoa_juridica, :class => 'checkbox', :checked => true %>
        <span>É Pessoa Jurídica?</span>
      </label>
    </div>

    <fieldset class="form-group" id="bloco-empresa">
      <label class="control-label">Nome da Empresa</label>
      <%= f.text_field :empresa, :class => 'form-control' %>
    </fieldset>

    <fieldset class="form-group">
      <label class="control-label">Nome do Representante</label>
      <%= f.text_field :representante, :class => 'form-control' %>
    </fieldset>

    <div class="actions">
      <%= f.submit "Salvar Cliente", :class => "btn btn-success" %>
    </div>
<% end %>

<script>
  $('#cliente_pessoa_juridica').click(function() {
    if( $(this).is(':checked')) {
      $("#bloco-empresa").show('fast');
    } else {
      $("#bloco-empresa").hide('fast', function() {
        $("#cliente_empresa").val('');
      });
    }
  });
</script>
