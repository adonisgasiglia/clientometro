<article class="content">
  <div>
    <%= flash_messages %>
  </div>

  <% title "Editar #{@contrato.plano.nome} (#{empresa_ou_representante(@contrato.cliente)}) | Clientômetro - Mères Escritórios Corporativos" %>

  <div class="title-search-block">
    <div class="title-block">
      <div class="row">
        <div style="float:right; margin-right: 14px;">
          <div class="btn-group btn-group-normal">
            <%= link_to contrato_path, :class => "btn btn-primary btn-sm rounded-s" do %>
                <i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Voltar
            <% end %>
            <%= link_to @contrato, :class => "btn btn-info btn-sm rounded-s" do %>
                <i class="fa fa-eye"></i>&nbsp;&nbsp;Ver Contrato
            <% end %>
          </div>
        </div>
        <div class="col-md-6">
          <h3 class="title">
            <%= "Editar #{@contrato.plano.nome} (#{empresa_ou_representante(@contrato.cliente)})" %>
          </h3>
          <p class="title-description"> Editar as informações do contrato </p>
        </div>
      </div>
    </div>
  </div>

  <section class="section">
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-block">
            <%= render 'form' %>
          </div>
          <div class="card-footer" style="text-align: center;">
            <div class="btn-group btn-group-sm">
              <%= link_to contratos_path, :class => "btn btn-primary" do %>
                  <i class="fa fa-arrow-left"></i>&nbsp;&nbsp;VOLTAR
              <% end %>
              <%= link_to @contrato, :class => "btn btn-info" do %>
                  <i class="fa fa-eye"></i>&nbsp;&nbsp;VER
              <% end %>
              <%= link_to @contrato, method: :delete, data: { confirm: 'Tem certeza disso?' }, :class => "btn btn-danger" do %>
                  <i class="fa fa-close"></i>&nbsp;&nbsp;APAGAR
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</article>