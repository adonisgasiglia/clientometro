<article class="content">
  <div>
    <%= flash_messages %>
  </div>

  <% title "#{@plano.nome} | Clientômetro - Mères Escritórios Corporativos" %>

  <div class="title-search-block">
    <div class="title-block">
      <div class="row">
        <div style="float:right; margin-right: 14px;">
          <div class="btn-group btn-group-sm">
            <%= link_to planos_path, :class => "btn btn-primary" do %>
                <i class="fa fa-arrow-left"></i>&nbsp;&nbsp;VOLTAR
            <% end %>
            <%= link_to edit_plano_path(@plano), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>&nbsp;&nbsp;EDITAR
            <% end %>
            <%= link_to @plano, method: :delete, data: { confirm: 'Tem certeza disso?' }, :class => "btn btn-danger" do %>
                <i class="fa fa-close"></i>&nbsp;&nbsp;APAGAR
            <% end %>
          </div>
        </div>
        <div class="col-md-6">
          <h3 class="title">
            <%= @plano.nome %>
          </h3>
        </div>
      </div>
    </div>
  </div>

  <section class="section">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-block">


            <p>
              <strong>Nome:</strong>
              <%= @plano.nome %>
            </p>

            <p>
              <strong>Preco atual:</strong>
              <%= humanized_money_with_symbol @plano.preco_atual %>
            </p>

            <p>
              <strong>Serviços Inclusos:</strong>
              <span style="font-size: 14px;">
              <%= inclui_telefonia?(@plano) %>
                <%= inclui_endereco_fiscal?(@plano) %>
                <%= inclui_endereco_comercial?(@plano) %>
                <%= inclui_sala_privativa?(@plano) %>
                <%= inclui_coworking?(@plano) %>
            </span>
            </p>

            <p>
              <strong>Ativo?</strong>
              <%= plano_ativo?(@plano) %>
            </p>
          </div>

          <div class="card-footer" style="text-align: center;">
            <div class="btn-group btn-group-sm">
              <%= link_to planos_path, :class => "btn btn-primary" do %>
                  <i class="fa fa-arrow-left"></i>&nbsp;&nbsp;VOLTAR
              <% end %>
              <%= link_to edit_plano_path(@plano), :class => "btn btn-warning" do %>
                  <i class="fa fa-edit"></i>&nbsp;&nbsp;EDITAR
              <% end %>
              <%= link_to @plano, method: :delete, data: { confirm: 'Tem certeza disso?' }, :class => "btn btn-danger" do %>
                  <i class="fa fa-close"></i>&nbsp;&nbsp;APAGAR
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</article>